= fragment 'homepage'
  = wrapper
    = fragment 'mission'
      = container
        = grid
          = row
            = column size: 2, class: 'computer only'
            = column computer: 12, tablet: 16, mobile: 16
              = h1 class: 'inverted dividing', text: @home_page.mission_title
              .lead.text
                = @renderer.render(@home_page.mission_description).html_safe

    = fragment 'story'
      = container
        = grid
          = row
            = column size: 2, class: 'computer only'
            = column computer: 12, tablet: 16, mobile: 16
              = h1 class: 'inverted dividing', text: @home_page.story_title
              .lead.text
                = @renderer.render(@home_page.story_description).html_safe

    = fragment 'contact'
      = container
        = grid
          = row
            = column size: 2, class: 'computer only'
            = column computer: 12, tablet: 16, mobile: 16
              = h1 class: 'inverted dividing', text: @home_page.contact_title
              .lead.text
                = @renderer.render(@home_page.contact_description).html_safe
